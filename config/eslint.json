{
  "extends": [
    "eslint:recommended"
  ],
  "plugins": [
      "pattern"
  ],
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "angular": true,
    "$": true
  },
  "rules": {
    "pattern/return-object-only" : 2,
    "comma-dangle": [
      "error",
      "never"
    ],
    "no-console": "off",
    "no-unused-vars": ["error", { "vars": "all", "args": "none" }],
    "quote-props": ["error", "as-needed"],
    "quotes": [
      2,
      "single", {"avoidEscape": true, "allowTemplateLiterals": true}
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}